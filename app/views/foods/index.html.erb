<section class="d-flex mx-auto p-5 w-75 flex-column align-items-center">
    <div class=" align-self-end">
        <%= link_to new_user_food_path(@user.id) do%>
            <button class="btn btn-primary">Add Food</button>
        <% end %>
    </div>

    <table class="table table-striped table-bordered table-sm table-hover my-5">     
        <thead>

            <th scope="col">Foods</th>
            <th scope="col">Measurement unit</th>
            <th scope="col">Unit price</th>
            <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>

            <% @foods.each do |food| %>
                <% render 'table_row', food: food %>
            <% end %>
        </tbody>
    </table>
</section>