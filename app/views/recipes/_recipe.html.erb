
<div class="border border-primary d-flex ml-5 p-2">
  <div class="columns w-50 p-1">
    <h2 class="p-2">
      <%= link_to recipe.name, user_recipe_path(current_user, recipe), class: "text-decoration-none" %>
    </h2>
    <% if can? :destroy, recipe %>
      
        <%= link_to "Remove", user_recipe_path(current_user, recipe), method: :delete, data: { confirm: "Do you really want to delete this recipe?" }, class: "btn-danger p-2 text-decoration-none" %>
    <% end %>
  </div>
  <div class="w-50">
    <p class="w-100"><%= recipe.description %></p>
  </div>
</div>
<br/>