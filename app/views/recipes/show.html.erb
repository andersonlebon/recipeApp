<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-10 col-lg-9 col-xl-8">
        <div class="card shadow-2-strong " style="border-radius: 1rem;">
          <div class="card-body p-2 text-center">
            <h1><%= @recipe.name %></h1>

            <div class="d-flex flex-column">

              <div class="row">
                <div class="col-md-6">
                  <p>Preparation time: <%= @recipe.preparation_time %></p>
                  <p>Cooking time: <%= @recipe.cooking_time %></p>
                  <div><%= @recipe.description %></div>
                </div>

                <div class="col-md-6">
                  <% if can? :update, @recipe %>
                    <%= render "public_btn" %>
                  <% end %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 my-5">
                  <button type="button" class="btn btn-primary btn-lg" id="shop">Generate Shopping list</button>
                </div>
                <div class="col-md-6 my-5">
                  <% if can? :update, @recipe %> 
                    <%= link_to "Add Food", new_user_recipe_recipe_food_path(current_user, @recipe), class: "btn btn-primary"%>
                  <% end %>
                </div>
              </div>     
              <div class="border-top border-secondary">
              </div>
              <br/>
              <table class="flex-row">
              <% if @recipe.recipe_foods.any? %>
                  <tr>
                    <th>Food</th>
                    <th>Quantity</th>
                    <th>Value</th>
                    <th>Actions</th>
                  </tr>
                <% end %>
                <% @recipe.recipe_foods.each do |food| %>
                  <tr>
                    <td><%= food.food.name%></td>
                    <td><%= food.quantity%> <%= food.food.measurement_unit%></td>
                    <td><%= number_to_currency(food.food.price*food.quantity)%></td>
                    <td>
                      <% if can? :update,  @recipe %>
                        <%= link_to "Modify", edit_user__recipe_food_path(food)%>
                        <%= link_to "Delete", user_recipe_recipe_food_path(recipe_id: @recipe.id, id: food.id), method: :delete, data: { confirm: "Are you sure you want to remove the food?" } %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- The Modal modal javascript is in app/asset/javascript/custom-->
<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <h4 class="text-center my-3">Generating Shopping list</h4>
      <h4>Select an inventory to use</h4>
             <%= form_with  url: user_shopping_list_index_path, method: :get do |form| %>
                <%= form.hidden_field :recipe_id, :value => params[:id] %>
                <div class="field">
                  <div class="select-option">
                    <%= form.select :inventory_id, @inventories.map { |t| [t.name, t.id]}, {}, class: 'form-control mb-3 mt-3', placeholder:'Inventory name' %>
                  </div>
                </div>
        
        <div class="modal-footer">
          <%= form.submit "Generate", class: "btn btn-success mt-3" %>
      <% end %> 
  </div>
</div>
