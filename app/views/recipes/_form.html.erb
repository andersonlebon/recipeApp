<% if recipe.errors.present? %>
  <div class="errors notification is-danger is-light">
    <h3 class="title is-5"><%= pluralize(recipe.errors.count, "error") %> Cannot save this recipe:</h3>
    <ul>
      <% recipe.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with url: user_recipes_path, model: @recipe do |form| %>
  <div class="mb-3">
    <%= form.label :name, { class: "form-label"} %>
    <%= form.text_field :name, { class: "form-control", required: true, placeholder: "Please enter recipe name", value: nil } %>
  </div>

  <div class="mb-3">
    <%= form.label :preparation_time, { class: "form-label"}%>
    <%= form.text_field :preparation_time, { class: "form-control", required: true, placeholder: "How long is the preparation?", value: nil } %>
  </div>

  <div class="mb-3">
    <%= form.label :cooking_time, { class: "form-label"} %>
    <%= form.text_field :cooking_time, { class: "form-control", required: true, placeholder: "How long is the cooking?" } %>
  </div>

  <div class="mb-3">
    <%= form.label :description, { class: "form-label"} %>
    <%= form.text_area :description, { class: "form-control", required: true, placeholder: "Describe the process please" } %>
  </div>

  <div>
    <%= form.check_box :public %>
    <%= form.label :public %>
  </div>

  <div>
    <%= form.submit "Create Recipe", class: "btn btn-primary mt-3" %>
  </div>
<% end %>