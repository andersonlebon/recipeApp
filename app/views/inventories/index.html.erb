<div class="container d-flex flex-column p-2">
<%= link_to 'Create new inventory', new_user_inventory_path(params[:user_id]), class:'btn btn-success btn-sm align-self-end' %>
<ul class="d-flex flex-column">
  <% @inventories.each do |inventory| %>
   <li class="d-flex  border border-secondary mt-2 mb-2 p-3 rounded">
   
    <div class="d-flex flex-column align-items-center mr-2 w-25">
     <%= link_to user_inventory_path(inventory.user.id, inventory.id) do %>
      <h2 class="nav-link"><%= inventory.name%></h2>
     <% end %>

      <% if can? :destroy, inventory %>
        <%= link_to 'Remove', { :controller=>:inventories,:action=>:destroy, :id=>inventory.id }, :method=>:delete, class:'btn btn-danger btn-sm' %>
      <% end %>

    </div>
      <p class="align-self-start p-3 w-75"><%= inventory.description %><h2>
   </li> 
   <% end %>
  </ul>
