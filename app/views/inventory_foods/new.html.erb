<div class='container d-flex justify-content-center p-3'>
  <%= form_with model: InventoryFood.new, :url => {:action => :create, :controller => :inventory_foods}, class: 'form-group w-50 d-flex flex-column' do |form| %>
    <h1 class="text-secondary align-center mb-3">Add food to inventory</h1>
    <div>
      <%= form.label :food %>
      <%= form.select :food_id, @foods.map { |t| [t.name, t.id]}, {}, class: 'form-control mb-3 mt-3', placeholder:'Food name' %>
    
      
    </div>
    <div>
      <%= form.label :quantity %>
      <%= form.number_field :quantity, min: 1, class: 'form-control mb-3 mt-3', placeholder:'0' %>
    </div>
    <div class="flex align-self-end">
      <%= link_to 'Cancel', :back , class:"btn btn-warning  mt-4 pe-5 ps-5" %>
      <%= form.submit "Save", class:"btn btn-primary  mt-4 pe-5 ps-5" %>
    </div>
    <% end %>
    
  </div>